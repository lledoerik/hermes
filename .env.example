# Hermes Media Server - Variables d'entorn
# Copia aquest fitxer a .env i configura els valors

# === MODE DE PRODUCCIÓ ===
# Activa el mode producció (valida configuració de seguretat)
HERMES_PRODUCTION=false

# === SEGURETAT ===
# Clau secreta per JWT (OBLIGATORI en producció)
# Genera una clau segura amb: python -c "import secrets; print(secrets.token_hex(32))"
HERMES_SECRET_KEY=genera-una-clau-aleatoria-segura-aqui

# === ADMIN PER DEFECTE ===
# Aquestes credencials es creen automàticament quan inicies el servidor per primera vegada
HERMES_ADMIN_USER=admin
HERMES_ADMIN_PASSWORD=canvia-aquesta-contrasenya
HERMES_ADMIN_EMAIL=admin@example.com

# === API ===
# Host i port del servidor API
HERMES_API_HOST=0.0.0.0
HERMES_API_PORT=8000

# === CORS ===
# Orígens permesos (separats per comes)
HERMES_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://hermes.cat
# Permetre tots els orígens (*) - NOMÉS per desenvolupament!
HERMES_CORS_ALLOW_ALL=false

# === BIBLIOTEQUES DE MEDIA ===
# Configura les teves biblioteques en format JSON
# Exemples:

# Biblioteques de vídeo (sèries i pel·lícules)
# HERMES_MEDIA_LIBRARIES=[{"name":"Anime","path":"/media/anime","type":"series"},{"name":"Pel·lícules","path":"/media/movies","type":"movies"}]

# Biblioteques de llibres
# HERMES_BOOKS_LIBRARIES=[{"name":"Llibres","path":"/media/books","type":"books"}]

# Biblioteques d'audiollibres
# HERMES_AUDIOBOOKS_LIBRARIES=[{"name":"Audiollibres","path":"/media/audiobooks","type":"audiobooks"}]

# === STREAMING ===
# Nombre màxim de transcodes simultanis
HERMES_MAX_TRANSCODES=2
